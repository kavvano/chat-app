<div class="chat_top">
  <div class="chat_name_box">
    <div class="chat_name">
      <%= @room.name %>
    </div>
  </div>
  <div class="chat_end_box">
    <div class="chat_end_btn">
      <a href="end">チャットを終了する</a>
    </div>
  </div>
</div>
<div class="chat_center">
  <%= render partial: "message", collection: @messages %>
</div>
<%= form_with model: [@room, @message], html: {class: "chat_bottom"}, local: true do |f| %>
  <div class="chat_input">
    <%= f.text_field :content, class: "message_input", placeholder: "type a message" %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: "hidden" %>
    </label>
  </div>
  <%= f.submit "送信", class: "send_btn" %>
<% end %>