<div class="side_bar_top">
  <div class="user_name">
    <%# <%= link_to "#{current_user.name}", "/users/#{current_user.id}/edit" %>
    <%= link_to current_user.name , edit_user_path(current_user) %>
  </div>
  <div class="chat_create_btn">
    <%= link_to "チャットを作成する" , new_room_path %>
  </div>
</div>
<div class="side_bar_bottom">
  <% current_user.rooms.each do |room| %>
    <div class="chat_room">
      <div class="room_name">
        <a href="#"><%= room.name %></a>
      </div>
    </div>
  <% end %>
</div>