<div class="message_box">
  <div class="message_top">
    <div class="message_name">
      <%= message.user.name %>
    </div>
    <div class="time">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="message_bottom">
    <div class="message">
      <%= message.content %>
    </div>
  </div>
</div>